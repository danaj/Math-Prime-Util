# TODO: bignums


sub fac_is_almost_prime {
  my($n, $k) = @_;
  return 0+($n==1) if $k == 0;
  return (is_prime($n) ? 1 : 0) if $k == 1;
  return is_semiprime($n) if $k == 2;

  return (scalar(Math::Prime::Util::factor($n)) == $k) ? 1 : 0;
}
